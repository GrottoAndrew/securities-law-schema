{
  "name": "securities-law-schema",
  "version": "0.2.0",
  "description": "Machine-readable securities law schemas for compliance management with TDD testing suite",
  "type": "module",
  "scripts": {
    "validate": "node scripts/validate-schemas.js",
    "validate:regulation-d": "node scripts/validate-schemas.js schemas/regulation-d",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:redteam": "vitest run tests/redteam",
    "test:all": "npm run test:unit && npm run test:redteam",
    "test:hot": "TEST_CADENCE=hot npm run test:all",
    "test:cold": "TEST_CADENCE=cold npm run test:all",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "build": "npm run validate && npm run test:all",
    "ci": "npm run lint && npm run typecheck && npm run test:all",
    "db:migrate": "node scripts/db/migrate.js",
    "db:rollback": "node scripts/db/migrate.js --rollback",
    "db:status": "node scripts/db/migrate.js --status",
    "scheduler:start": "node scripts/test-scheduler.js",
    "dashboard:dev": "vite --config src/dashboard/vite.config.js",
    "api:dev": "node src/api/server.js",
    "dev": "concurrently \"npm run api:dev\" \"npm run dashboard:dev\"",
    "demo": "./scripts/demo.sh start",
    "demo:stop": "./scripts/demo.sh stop",
    "demo:seed": "./scripts/demo.sh seed",
    "demo:clean": "./scripts/demo.sh clean",
    "seed": "node scripts/seed-demo-data.js --api",
    "seed:json": "node scripts/seed-demo-data.js --json",
    "seed:sql": "node scripts/seed-demo-data.js --sql"
  },
  "keywords": [
    "securities",
    "compliance",
    "regulation-d",
    "json-ld",
    "sec",
    "oscal",
    "evidence-locker",
    "audit-trail"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.11.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  }
}
